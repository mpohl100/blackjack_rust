{
    "name": "Ubuntu Rust Dev Container for localize",
    "build": {"dockerfile": "Dockerfile"},
    "containerEnv":{
      "EXECUTE_BIN_BASH": "0"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.git",  // Include Git extension
                "rust-lang.rust-analyzer",
                "GitHub.copilot"
              ],
              "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "git.path": "/usr/bin/git"  // Set Git path (if necessary)
              }          
        }
    }
}